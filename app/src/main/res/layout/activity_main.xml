<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="@drawable/ringwood_background"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@android:color/holo_green_light"
        >

        <TextView
            android:id="@+id/category_menu_sport"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:text="@string/category_menu_sport"
            android:gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@android:color/holo_blue_light">

        <TextView
            android:id="@+id/category_menu_shops"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:text="@string/category_menu_shops"
            android:gravity="center"

            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/category_menu_food"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:text="@string/category_menu_food"
            android:gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@android:color/darker_gray">

        <TextView
            android:id="@+id/category_menu_landmarks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:text="@string/category_menu_landmarks"
            android:gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@android:color/holo_purple">

        <TextView
            android:id="@+id/category_menu_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:text="@string/category_menu_info"
            android:gravity="center" />
    </FrameLayout>

    </LinearLayout>

</ScrollView>
